<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/colored_main_background"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/BBH_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bbh_logo_fade" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_below="@id/BBH_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search A Recipe..."
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/searchEditText"
        android:layout_centerInParent="true"
        android:backgroundTint="#930019"
        android:text="Search now!"
        android:textColor="#fefefe"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/searchButton"
        android:layout_above="@id/btnSearchNearby"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:fillViewport="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp">

        <LinearLayout
            android:id="@+id/recipesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <Button
        android:id="@+id/btnSearchNearby"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="106dp"
        android:backgroundTint="#930019"
        android:gravity="center"
        android:text="Grocery Stores"
        android:textColor="#fefefe"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>